{
  "name": "identity-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "db:migrate": "psql $DATABASE_URL -f migrations/001_create_users.sql"
  },
  "dependencies": {
    "hono": "^4.11.4",
    "jose": "^6.1.3",
    "otpauth": "^9.4.1",
    "postgres": "^3.4.8",
    "qrcode": "^1.5.4",
    "zod": "^4.3.5",
    "@gymato/messaging": "workspace:*"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.6",
    "bun-types": "^1.3.6"
  }
}