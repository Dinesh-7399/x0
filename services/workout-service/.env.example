# Workout Service Environment Variables

# Service
PORT=8080
NODE_ENV=development

# Database
DATABASE_URL=postgresql://gymato:gymato_dev@localhost:5432/gymato

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret (for auth validation)
JWT_SECRET=your-jwt-secret-here

# Service URLs
MEDIA_SERVICE_URL=http://localhost:8090
USER_SERVICE_URL=http://localhost:8082

# Notification channel for events
NOTIFICATION_CHANNEL=notifications:push

# Limits (prevent abuse)
MAX_EXERCISES_PER_WORKOUT=50
MAX_SETS_PER_EXERCISE=20
MAX_PROGRAM_WEEKS=52
MAX_CUSTOM_EXERCISES=100
MAX_WORKOUT_DURATION_MINUTES=480
MAX_WORKOUTS_PER_DAY=10
