# Media Service Environment Variables

# Service
PORT=8080
NODE_ENV=development

# Database
DATABASE_URL=postgresql://gymato:gymato_dev@localhost:5432/gymato

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret (for auth validation)
JWT_SECRET=your-jwt-secret-here

# Storage Configuration
# Options: 'local' or 's3'
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# S3 Configuration (required if STORAGE_TYPE=s3)
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://your-s3-compatible-endpoint (optional, for MinIO etc.)

# Upload Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_FILES_PER_UPLOAD=10

# Public URL (for generating file URLs)
PUBLIC_BASE_URL=http://localhost:8090
