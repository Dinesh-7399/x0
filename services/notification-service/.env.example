# Notification Service Environment Variables

# Service
PORT=8080
NODE_ENV=development

# Database
DATABASE_URL=postgresql://gymato:gymato_dev@localhost:5432/gymato

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-here

# Internal Service Key (for service-to-service auth)
INTERNAL_SERVICE_KEY=internal-service-key-change-in-production

# Firebase Cloud Messaging
FCM_PROJECT_ID=your-fcm-project-id
FCM_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FCM_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# SendGrid (Email)
SENDGRID_API_KEY=SG.xxxx
SENDGRID_FROM_EMAIL=noreply@gymato.com
SENDGRID_FROM_NAME=Gymato

# Twilio (SMS)
TWILIO_ACCOUNT_SID=ACxxxx
TWILIO_AUTH_TOKEN=xxxx
TWILIO_FROM_NUMBER=+1234567890

# Rate Limits
MAX_NOTIFICATIONS_PER_USER_PER_HOUR=100
MAX_SMS_PER_USER_PER_DAY=5
MAX_EMAILS_PER_USER_PER_DAY=50

# Quiet Hours Defaults
DEFAULT_QUIET_HOURS_START=22:00
DEFAULT_QUIET_HOURS_END=08:00

# Retention
NOTIFICATION_RETENTION_DAYS=30
